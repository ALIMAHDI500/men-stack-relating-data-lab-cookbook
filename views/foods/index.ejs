<!DOCTYPE html>
<html>
  <head>
    <title>My Pantry</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Welcome to my Pantry</h1>
    
  
      <a href="/users/<%= userId %>/foods/new">Add New Item</a>
    <ul>
      <% if (pantry.length === 0) { %>
        <li>There are no items in this pantry.</li>
      <% } else { %>
        <% pantry.forEach(item => { %>
          <li>
            <%= item.name %>
            <form action="/users<%= item._id %>/foods/<%= foods._id %>?_method=DELETE" method="POST">
              <button type="submit">Delete</button>
            </form>
            <a href="/users/<%= user._id %>/foods/<%= item._id %>/edit">Edit</a>
          </li>
        <% }) %>
      <% } %>
    </ul>
  </body>
</html>